<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/grey5"
    android:orientation="vertical"
    tools:context="com.example.nuevo.infobot.ChatAi">
    <ListView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/grey5"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:divider="@null"
        android:dividerHeight="3dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal"
        android:background="@drawable/send_board"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:weightSum="5">
     <EditText
         android:id="@+id/msg_id"
         android:inputType="textAutoCorrect"
         android:layout_width="0dp"
         android:paddingLeft="4.5dp"
         android:background="@drawable/editview_background"
         android:textCursorDrawable="@drawable/cursor"
         android:textColor="@color/cloud_white"
         android:layout_height="match_parent"
         android:layout_weight="4.2"
         />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_marginRight="-2dp"
            android:gravity="center"
            android:background="@drawable/button_press"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_id"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="@drawable/sendimg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
