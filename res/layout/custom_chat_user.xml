        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_gravity="end"
        android:textSize="10dp"
        android:text="time"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/userpic_id"
        android:layout_width="31dp"
